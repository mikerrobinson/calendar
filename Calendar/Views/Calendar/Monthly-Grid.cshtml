@model CalendarViewModel

@{ 
  Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Calendar</title>
</head>
<body>
  <style>
    html {
      height: 100%;
      width: 100%;
      font-family: sans-serif;
    }

    body {
      margin: 0;
      height: 100%;
      width: 100%;
    }

    ol {
      margin-block-start: 0;
      margin-block-end: 0;
      margin-inline-start: 0;
      margin-inline-end: 0;
      padding-inline-start: 0;
    }

    .calendar {
      display: flex;
      flex-direction: column;
      align-items: stretch;
      height: 100%;
      width: 100%;
      box-sizing: border-box;
      border: 4px solid #000;
      background-color: #000;
      color: #fff;
    }

    .month-label {
      display: flex;
      justify-content: center;
      align-content: center;
    }

    .day-of-week-labels, .date-grid {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      list-style: none;
    }

    .day-of-week-labels {
      justify-items: center;
      align-items: stretch;
    }

    .date-grid {
      flex: 1 1 auto;
      gap: 4px;
      list-style-position: inside;
      counter-reset: date-grid;
    }

    .date-grid li {
      counter-increment: date-grid;
      background: #fff;
      color: #000;
      padding: 4px;
    }

    .date-grid li::before {
      content: counter(date-grid);
      font-weight: bold;
    }

    .date-grid li div {
      border: 3px solid teal;
      margin: 4px;
      padding: 4px;
      background: lightblue;
    }
  </style>

  @if (Model.GridStart > 0)
  {
    <style>
      .date-grid::before {
        grid-column: span @(Model.GridStart);
        content: "";
        background-color: #ddd;
      }
    </style>
  }

  @if (Model.GridEnd > 0)
  {
    <style>
      .date-grid::after {
        grid-column: span @(Model.GridEnd);
        content: "";
        background-color: #ddd;
      }
    </style>
  }

  <div class="calendar">
    <div class="month-label">@Model.CurrentDate.ToString("MMMM yyyy")</div>
    <ol class="day-of-week-labels">
      @foreach (var day in Calendar.Constants.AbbreviatedDays)
      {
        <li>@day</li>
      }
    </ol>
    <ol class="date-grid">
      @for(var day = 1; day <= Model.DaysInMonth; day++)
      {
        <li>
          @foreach (var item in Model.Events[day])
          {
            <div>@item.Description</div>
          }
        </li>
      }
    </ol>
  </div>
</body>
</html>
